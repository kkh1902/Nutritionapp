<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_gradient">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1120px"
        android:layout_alignParentTop="true"
        android:layout_marginStart="96px"
        android:layout_marginTop="96px"
        android:layout_marginEnd="96px"
        android:layout_marginBottom="96px"
        android:background="@drawable/shape_bg_login_window"
        android:elevation="8px"
        android:orientation="vertical"
        android:paddingLeft="64px"
        android:paddingTop="92px"
        android:paddingRight="64px"
        android:paddingBottom="64px">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="300px"
            android:src="@drawable/img_menu" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32px"
            android:layout_marginBottom="32px"
            android:background="@drawable/shape_bg_login_group"
            android:orientation="vertical"
            android:padding="24px">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32px"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="96px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:fontFamily="@font/font_deco"
                    android:text="I D"
                    android:textAlignment="center"
                    android:textColor="@color/blue_light"
                    android:textSize="48px" />

                <EditText
                    android:id="@+id/login_input_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="username"
                    android:backgroundTint="@color/blue_light"
                    android:inputType="text"
                    android:lines="1"
                    android:padding="24px"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/blue_light"
                    android:textColorHint="@color/gray"
                    android:textStyle="italic" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="96px"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8px"
                    android:fontFamily="@font/font_deco"
                    android:text="PW"
                    android:textAlignment="center"
                    android:textColor="@color/blue_light"
                    android:textSize="48px" />

                <EditText
                    android:id="@+id/login_input_pw"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_light"
                    android:inputType="textPassword"
                    android:lines="1"
                    android:padding="24px"
                    android:singleLine="true"
                    android:textAlignment="viewEnd"
                    android:textColor="@color/blue_light"
                    android:textColorHint="@color/gray"
                    android:textStyle="italic" />
            </LinearLayout>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn_signin"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:layout_marginBottom="12px"
            android:background="@drawable/shape_bg_login_group"
            android:fontFamily="@font/font_deco"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="로그인"
            android:textColor="@color/blue_light"
            android:textSize="48px" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/login_btn_signup"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="match_parent"
            android:layout_height="96px"
            android:background="@drawable/shape_bg_login_group"
            android:fontFamily="@font/font_deco"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="회원가입"
            android:textColor="@color/blue_light"
            android:textSize="48px" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="512px"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="128px"
        android:elevation="16px"
        android:src="@drawable/img_cafe" />

</RelativeLayout>
