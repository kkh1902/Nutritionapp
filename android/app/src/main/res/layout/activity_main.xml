<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_bg_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/main_scrollview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/main_calendar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="64px"
                android:layout_marginTop="64px"
                android:layout_marginRight="64px"
                android:layout_marginBottom="48px"
                android:background="@drawable/bg_chlendar"
                android:elevation="32px">

                <CalendarView
                    android:id="@+id/main_calendarview"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerInParent="true" />
            </RelativeLayout>

            <LinearLayout
                android:id="@+id/main_selector_content1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="36px"
                android:paddingLeft="64px"
                android:paddingRight="64px">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_time_breakfast"
                        android:layout_width="148px"
                        android:layout_height="88px"
                        android:background="@color/invisible"
                        android:text="아침"
                        android:textColor="@color/blue_light"
                        android:textSize="48px"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/btn_time_breakfast_sel"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:background="@drawable/shape_bg_dock" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_time_lunch"
                        android:layout_width="148px"
                        android:layout_height="88px"
                        android:background="@color/invisible"
                        android:text="점심"
                        android:textColor="@color/blue_light"
                        android:textSize="48px"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/btn_time_lunch_sel"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:background="@drawable/shape_bg_dock"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_time_dinner"
                        android:layout_width="148px"
                        android:layout_height="88px"
                        android:background="@color/invisible"
                        android:text="저녁"
                        android:textColor="@color/blue_light"
                        android:textSize="48px"
                        android:textStyle="bold" />

                    <View
                        android:id="@+id/btn_time_dinner_sel"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:background="@drawable/shape_bg_dock"
                        android:visibility="invisible" />
                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
