                            android:layout_height="64px"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_btn2"
                            android:padding="0px"
                            android:text="더보기"
                            android:textColor="@color/blue"
                            android:textStyle="bold" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/detail_wrap_recommend_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="32px"
                        android:background="@color/white"
                        android:visibility="gone">

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="256px"
                            android:background="#FFF0F0" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8px"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/shape_bg_shadow_top" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="8px"
                            android:layout_alignParentBottom="true"
                            android:background="@drawable/shape_bg_shadow_bottom" />

                        <TextView
                            android:id="@+id/main_recommend_title"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="64px"
                            android:layout_marginTop="64px"
                            android:layout_marginBottom="64px"
                            android:elevation="8px"
                            android:text="단백질, 지방이 많은 음식입니다."
