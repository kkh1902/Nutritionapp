                            android:textSize="56px"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:orientation="horizontal"
                            android:paddingTop="200px">

                            <RelativeLayout
                                android:layout_width="296px"
                                android:layout_height="296px"
                                android:layout_marginLeft="64px"
                                android:layout_marginRight="32px"
                                android:layout_marginBottom="64px"
                                android:background="@drawable/img_recommend_food1"
                                android:elevation="16px">

                                <TextView
                                    android:id="@+id/detail_recommend_food1"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_centerHorizontal="true"
                                    android:background="@drawable/shape_btn2"
                                    android:padding="16px"
                                    android:text="추천음식"
                                    android:textColor="@color/blue_black"
                                    android:textSize="36px"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="296px"
                                android:layout_height="296px"
                                android:layout_marginBottom="64px"
                                android:background="@drawable/img_recommend_food2"
                                android:elevation="16px">

                                <TextView
                                    android:id="@+id/detail_recommend_food2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
