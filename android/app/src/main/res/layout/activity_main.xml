                            <View
                                android:id="@+id/main_bar_ji_avg"
                                android:layout_width="16px"
                                android:layout_height="116px"
                                android:layout_gravity="bottom"
                                android:background="@drawable/shape_bar"
                                android:backgroundTint="@color/blue_gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_bar_ji_title"
