                                    android:background="@drawable/shape_btn2"
                                    android:padding="16px"
                                    android:text="추천음식"
                                    android:textColor="@color/blue_black"
                                    android:textSize="36px"
                                    android:textStyle="bold" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="296px"
                                android:layout_height="296px"
                                android:layout_marginLeft="32px"
                                android:layout_marginRight="64px"
                                android:layout_marginBottom="64px"
                                android:background="@drawable/img_recommend_food3"
                                android:elevation="16px">

                                <TextView
