                            android:layout_height="192px"
                            android:layout_above="@+id/main_bar_sugar_title"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                            <View
                                android:id="@+id/main_bar_sugar"
                                android:layout_width="24px"
                                android:layout_height="116px"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="12px"
                                android:background="@drawable/shape_bar" />

                            <View
                                android:id="@+id/main_bar_sugar_avg"
                                android:layout_width="16px"
                                android:layout_height="116px"
                                android:layout_gravity="bottom"
                                android:background="@drawable/shape_bar"
                                android:backgroundTint="@color/blue_gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_bar_sugar_title"
                            android:layout_width="wrap_content"
                            android:layout_height="48px"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="당"
                            android:textAlignment="center" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="128px"
                        android:layout_height="256px">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="192px"
                            android:layout_above="@+id/main_bar_salt_title"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true">

                            <View
                                android:id="@+id/main_bar_salt"
                                android:layout_width="24px"
                                android:layout_height="116px"
                                android:layout_gravity="bottom"
                                android:layout_marginRight="12px"
                                android:background="@drawable/shape_bar" />

                            <View
                                android:id="@+id/main_bar_salt_avg"
                                android:layout_width="16px"
                                android:layout_height="116px"
                                android:layout_gravity="bottom"
                                android:background="@drawable/shape_bar"
                                android:backgroundTint="@color/blue_gray" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/main_bar_salt_title"
                            android:layout_width="wrap_content"
                            android:layout_height="48px"
                            android:layout_alignParentBottom="true"
                            android:layout_centerHorizontal="true"
                            android:text="나트륨"
                            android:textAlignment="center" />
                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="256px">

                    <RelativeLayout
                        android:id="@+id/detail_wrap_recommend"
                        android:layout_width="952px"
                        android:layout_height="460px"
                        android:layout_marginLeft="64px"
                        android:layout_marginRight="64px"
                        android:background="@drawable/img_bg_recommend"
                        android:elevation="8px"
                        android:padding="32px">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:elevation="16px"
                            android:text="먹보's PICK"
                            android:textColor="@color/blue_black"
                            android:textSize="80px"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="116px"
                            android:elevation="16px"
                            android:text="이러한 음식을 섭취해보세요!"
                            android:textColor="@color/blue_gray"
                            android:textSize="44px"
                            android:textStyle="bold" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/detail_btn_recommend_detail"
